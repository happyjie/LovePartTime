<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_launcher_round" />

    <com.lib.llj.widget.ClearEditText
        android:id="@+id/et_account"
        style="@style/textSmallColorWhite"
        android:textColor="@color/color66"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:hint="请输入手机号码/用户名"
        android:maxLength="32"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:textColorHint="@color/color69"
        app:drawableLeft="@drawable/icon_account" />


    <com.lib.llj.widget.ClearEditText
        android:id="@+id/et_password"
        style="@style/textSmallColorWhite"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/color66"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:paddingLeft="4dp"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:paddingRight="4dp"
        android:gravity="center_vertical"
        android:hint="密码"
        android:inputType="textPassword"
        android:maxLength="12"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:textColorHint="@color/color69"
        app:drawableLeft="@drawable/icon_password" />


    <TextView
        android:id="@+id/tv_login_yxj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_rectangle_50dp_primary_color"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="登录"
        style="@style/textBigColorWhite"/>



</LinearLayout>
</layout>